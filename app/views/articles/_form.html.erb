<%= tinymce_assets %>

<div class="article-form">
	<%= form_for(@article, html: {multipart: true}) do |f| %>
		<% if @article.errors.any? %>
			<ul>
				<% @article.errors.full_messages.each do |error| %>
				<li><%= error %></li>
				<% end %>
			</ul>
		<% end %>
			<%= f.label :title, 'Post Title', class: "article-label"%><br>
			<%= f.text_field :title, class: 'article-title-field' %><br><br><br>
			<%= f.text_area :body, class: "article-area tinymce" %>
				<br><br><br>
			<%= f.submit 'submit here', class: "confirm-button" %>
		</p>
	<% end %>
</div>

