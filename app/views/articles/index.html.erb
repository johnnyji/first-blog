<br>

<div class="articles-container">
	<% @articles.each do |article| %>
		<div class="article">
			<h3 class='article-title'><%= link_to article.title, article_path(article)%></h3>
			<p class='article-date'><%= article.created_at.strftime("%B %d, %Y") %></p>
			<p class="article-body"><%= truncate(article.body.html_safe, length: 100, omission: '		', escape: false) { link_to '<i class="fa fa-circle"></i><i class="fa fa-circle"></i><i class="fa fa-circle"></i>'.html_safe, article_path(article) }%></p>
		</div>
	<% end %>
</div>

<% if logged_in? %>
	<%= link_to "Create a New Article", new_article_path, class: "confirm-button" %>
<% end %>



