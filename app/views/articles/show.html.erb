<div class="current-article">
	<h1><%= @article.title.html_safe %></h1>
	<p class="current-article-date"><%= @article.created_at.strftime('%B %d, %Y') %></p>
	<p class="current-article-body"><%= @article.body.html_safe %></p>

	<p class="current-article-image">
		<% if @article.image.exists? %>
      <%= image_tag @article.image.url(:medium).html_safe %><br/>
  	<% end %>
	</p>


</div>

<div class="comment-section">
	<% if @comments.size < 1 %>
		<h3>No Comments yet</h3>
	<% elsif @comments.size == 1 %>
		<h3><%= @comments.size %>&nbsp;Comment</h3>
	<% else %>
		<h3><%= @comments.size %>&nbsp;Comments</h3>
	<% end %>
	<%= render partial: "comment", collection: @comments %>
</div>

<%= render partial: "comments/form" %>

<!-- only show if user is logged in  -->
<% if logged_in? %>
	<%= link_to "edit post", edit_article_path(@article) %><br>
	<%= link_to "delete post", article_path(@article), method: :delete, data: {confirm: "You sure? Once you delete it... It's gone forever!"} %><br><br>
<% end %>

<%= link_to "go back", articles_path, class: "confirm-button" %>