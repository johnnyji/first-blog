<div class="comment-form">
	<%= form_for [@article, @comment] do |f| %>
		<%= f.text_field :author_name, placeholder: 'Your name', class: "comment-area-name", autofocus: true %><br>
		<%= f.text_area :body, placeholder: 'Your thoughts...', class: "comment-area" %><br><br>
		<%= f.submit 'submit here', class: "confirm-button" %>
	<% end %>
</div>