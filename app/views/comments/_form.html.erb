<h3>post a comment</h3>

<%= form_for [@article, @comment] do |f| %>
	<p>
		<%= f.label :author_name, "your name", :class => "form_subtitle" %><br>
		<%= f.text_field :author_name %>
	</p>
	<p>
		<%= f.label :body, "your comment", :class => "form_subtitle" %><br>
		<%= f.text_area :body %><br><br>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>